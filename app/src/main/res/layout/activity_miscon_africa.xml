<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".misconAfrica">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ad_miscon_africa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:padding="3dp"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544"></com.google.android.gms.ads.AdView>

        <TextView
            android:id="@+id/Miscon_heading_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ad_miscon_africa"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/overView_MisconceptionsOfAfrica"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            style="@style/Widget.White.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Miscon_heading_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:onClick="misconceptionsOfAfrica"
            android:text="10 Misconceptions of Africa"
            android:textColor="#FFFF"
            android:textSize="20sp" />


    </RelativeLayout>
</ScrollView>