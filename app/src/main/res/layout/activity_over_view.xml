<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".overView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/overviewAd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

        <Button
            android:id="@+id/overViewStartQuiz"
            style="@style/Widget.White.Button"
            android:layout_width="@dimen/overViewMainButton"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/overviewAd1"
            android:layout_marginTop="40dp"
            android:onClick="questionInto"
            android:text="@string/overView_StartQuiz"
            android:textSize="20sp"
            android:textColor="#FFFF" />

        <Button
            android:id="@+id/overViewDidYouKnow"
            style="@style/Widget.White.Button"
            android:layout_width="@dimen/overViewMainButton"
            android:layout_height="wrap_content"
            android:layout_below="@id/overViewStartQuiz"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:onClick="didYouKnow"
            android:text="@string/overView_DidYouKnow"
            android:textColor="#FFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/overViewAfricaNews"
            style="@style/Widget.White.Button"
            android:layout_width="@dimen/overViewMainButton"
            android:layout_height="wrap_content"
            android:layout_below="@id/overViewDidYouKnow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:onClick="africaNews"
            android:text="@string/overView_AfricaNews"
            android:textColor="#FFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/overView_Miscon_Africa"
            style="@style/Widget.White.Button"
            android:layout_width="@dimen/overViewMainButton"
            android:layout_height="wrap_content"
            android:layout_below="@id/overViewAfricaNews"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:onClick="misconAfrica"
            android:text="@string/overView_MisconceptionsOfAfrica"
            android:textColor="#FFFF"
            android:textSize="20sp" />

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/overviewAd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/overView_Miscon_Africa"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />
    </RelativeLayout>
</ScrollView>