<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appsbackground"
    tools:context=".overView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/overviewAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-9646388292265496/4392647445" />

        <Button
            android:id="@+id/overViewStartQuiz"
            style="@style/Widget.Button"
            android:layout_width="@dimen/overViewMainButton"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/overviewAd"
            android:layout_marginTop="20dp"
            android:onClick="questionInto"
            android:text="@string/overView_StartQuiz"
            android:textSize="20sp"
            android:textColor="#F0000000" />

        <Button
            android:id="@+id/overViewDidYouKnow"
            style="@style/Widget.Button"
            android:layout_width="@dimen/overViewMainButton"
            android:layout_height="wrap_content"
            android:layout_below="@id/overViewStartQuiz"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:onClick="didYouKnow"
            android:text="@string/overView_DidYouKnow"
            android:textColor="#F0000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/overViewAfricaNews"
            style="@style/Widget.Button"
            android:layout_width="@dimen/overViewMainButton"
            android:layout_height="wrap_content"
            android:layout_below="@id/overViewDidYouKnow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:onClick="africaNews"
            android:text="@string/overView_AfricaNews"
            android:textColor="#F0000000"
            android:textSize="20sp" />

        <Button
            style="@style/Widget.Button"
            android:layout_width="@dimen/overViewMainButton"
            android:layout_height="wrap_content"
            android:layout_below="@id/overViewAfricaNews"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:onClick="misconAfrica"
            android:text="@string/overView_MisconceptionsOfAfrica"
            android:textColor="#F0000000"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>