<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".misconAfrica">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Miscon_heading_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/overView_MisconceptionsOfAfrica"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            style="@style/Widget.White.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Miscon_heading_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="misconceptionsOfAfrica"
            android:text="10 Misconceptions of Africa"
            android:textColor="#FFFF"
            android:textSize="20sp" />


    </RelativeLayout>
</ScrollView>